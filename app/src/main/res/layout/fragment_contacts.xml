<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".menu_fragments.ContactsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Contacts"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/white_background"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_location"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="Baku, Azerbaijan, Street A, A, C"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="+994 55 000 00 00"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phone2Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="+994 55 111 11 11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_email"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="noreply@gez.com"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/gez" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>