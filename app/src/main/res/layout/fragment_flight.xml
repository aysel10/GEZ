<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FlightFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/elementsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_button_bckgr"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioRoundTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/roundTrip"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:theme="@style/RadioButtonTheme" />

                <RadioButton
                    android:id="@+id/radioOneWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/oneWay"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:theme="@style/RadioButtonTheme" />

                <RadioButton
                    android:id="@+id/radioMultyCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/multiCity"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:theme="@style/RadioButtonTheme" />

            </RadioGroup>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/fromLabel"
                android:textColor="@color/cardview_light_background"
                android:textSize="16sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/fromAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_corners"
                android:completionThreshold="1"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/search_textf_icon_loc_wrap"
                android:hint="@string/fromPlaceHolder"
                android:imeOptions="actionNext"
                android:inputType="text|textCapCharacters"
                android:padding="8dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/fontColor" />

            <!--<EditText-->
                <!--android:id="@+id/fromEditText"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginEnd="8dp"-->
